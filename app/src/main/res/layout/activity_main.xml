<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/animated_image"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_margin="32dp"
        android:adjustViewBounds="true"
        android:scaleType="center"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintBottom_toTopOf="@+id/iv_up"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_up"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:padding="20dp"
        app:layout_constraintLeft_toLeftOf="@id/animated_image"
        app:layout_constraintRight_toRightOf="@id/animated_image"
        android:layout_marginRight="36dp"
        app:layout_constraintTop_toBottomOf="@id/animated_image"
        android:src="@android:drawable/arrow_up_float"
        app:layout_constraintBottom_toTopOf="@+id/iv_down" />

    <ImageView
        android:id="@+id/iv_down"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:scaleType="fitXY"
        app:layout_constraintLeft_toLeftOf="@id/animated_image"
        app:layout_constraintRight_toRightOf="@id/animated_image"
        android:layout_marginRight="36dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/iv_up"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@android:drawable/arrow_down_float" />

    <ImageView
        android:src="@android:drawable/ic_media_play"
        app:layout_constraintBottom_toTopOf="@id/iv_down"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/iv_up"
        app:layout_constraintTop_toBottomOf="@id/iv_up"
        android:layout_marginRight="56dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"/>


</androidx.constraintlayout.widget.ConstraintLayout>